<% case operatingsystem -%>
<% when "Debian" -%>
<% if lsbdistcodename != 'wheezy' -%>
deb http://oar-ftp.imag.fr/oar/<%= scope.lookupvar('version') %>/debian/ <%= lsbdistcodename %> main
<% else -%>
deb http://oar-ftp.imag.fr/oar/<%= scope.lookupvar('version') %>/debian/ wheezy-unstable main
<% end -%>
<% when "Ubuntu" -%>
deb http://oar-ftp.imag.fr/oar/<%= scope.lookupvar('version') %>/debian/ squeeze main
<% end -%>
